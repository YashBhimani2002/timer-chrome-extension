{
    "manifest_version":3,
    "name":"Break Timer",
    "description":"Break Timer",
    "version":"1.0.0",
    "action":{
        "default_popup":"popup.html"
    },
    "icons":{
        "128":"icons/icon-128.png",
        "48":"icons/icon-48.png",
        "32":"icons/icon-32.png",
        "16":"icons/icon-16.png"
    },
    "permissions":[
        "storage",
        "alarms",
        "notifications",
        "contextMenus"
    ],
    "background":{
        "service_worker":"background.js"
    },
    "content_scripts":[
        {
            "matches":["<all_urls>"],
            "js":["content.js"]
        }
    ]
}