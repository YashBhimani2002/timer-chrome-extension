{
    "manifest_version": 3,
    "name": "Break Timer",
    "description": "Break Timer",
    "version": "1.0.0",
    "action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "128": "assets/icons/icon-128.png",
        "48": "assets/icons/icon-48.png",
        "32": "assets/icons/icon-32.png",
        "16": "assets/icons/icon-16.png"
    },
    "permissions": [
        "storage",
        "alarms",
        "notifications",
        "tabs",
        "activeTab",
        "scripting"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*/*",
                "http://*/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "host_permissions": [
        "https://*/*",
        "http://*/*"
    ]
}